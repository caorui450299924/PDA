<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="81sp"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="74dp"
            android:layout_height="70sp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/textview_border_product"
            android:src="@drawable/fm" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="70sp">

            <TextView
                android:id="@+id/textView_box_code"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="top"
                android:background="@drawable/textview_border_product"
                android:gravity="center"
                android:textSize="19sp"
                tools:text="textView_box_code" />

            <TextView
                android:id="@+id/textView_box_sl"
                android:layout_width="match_parent"
                android:layout_height="34sp"
                android:layout_gravity="top"
                android:background="@drawable/textview_border_product"
                android:gravity="center"
                android:text="textView_box_sl"
                android:textSize="16sp" />

        </RadioGroup>
    </RadioGroup>

</LinearLayout>