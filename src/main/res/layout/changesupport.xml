<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_change_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_change_support"
            android:layout_width="154dp"
            android:layout_height="47dp"
            android:text="整托"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton2_change_support"
            android:layout_width="154dp"
            android:layout_height="47dp"
            android:text="散托"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_change_support"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_chsp_th"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:gravity="center|left"
            android:text="托号："
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView_chsp_thxs"
            android:layout_width="286dp"
            android:layout_height="63dp"
            android:layout_gravity="bottom|top"
            android:gravity="center_horizontal|left|center_vertical"
            android:textSize="18sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="216dp">

        <Button
            android:id="@+id/button_pintuo"
            android:text="拼托"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_confirm1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_deletesupport1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="1"
            android:textSize="30sp" />

    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_change_support"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>