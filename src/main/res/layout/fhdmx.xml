<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_fhdmx_kh"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:gravity="center|left"
            android:text="客户："
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_fhdmx_kh_dis"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="fill"
            android:gravity="center_horizontal|left|center_vertical"
            android:textSize="26sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <Button
            android:id="@+id/btn_fhdmx_delete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="删除扫描记录"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_fhdmx_print"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="打印装托明细"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_fhdmx_fh"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="提交发货"
            android:textSize="30sp" />


    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_fhdmx"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>