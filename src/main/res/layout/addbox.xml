<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:gravity="center"
            android:text="产品："
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editview_add_box"
            android:layout_width="match_parent"
            android:layout_height="60sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_addbox_name"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:gravity="center"
            android:text="数量："
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editview_add_box_sl"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:inputType="number" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_addbox_mph"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:gravity="center"
            android:text="铭牌："
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editview_add_box_mph"
            android:layout_width="match_parent"
            android:layout_height="60sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50sp">

        <Button
            android:id="@+id/button_add_box_mx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:text="添加产品"
            android:textSize="30sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button_add_box_mx3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="提交"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_add_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>