<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="135sp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="90sp"
            android:layout_height="120sp"
            android:background="@drawable/textview_border_product"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="16sp"
                android:src="@drawable/fm" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView_product_wl"
                android:layout_width="match_parent"
                android:background="@drawable/textview_border_product"
                android:layout_height="40sp"
                android:gravity="center|left"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_product_hwh"
                android:layout_width="match_parent"
                android:background="@drawable/textview_border_product"
                android:layout_height="40sp"
                android:gravity="center|left"
                android:text="TextView"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView_product_xs"
                android:layout_width="match_parent"
                android:background="@drawable/textview_border_product"
                android:layout_height="40sp"
                android:gravity="center|left"
                android:text="TextView"
                android:textSize="26sp" />
        </RadioGroup>

    </RadioGroup>
</LinearLayout>