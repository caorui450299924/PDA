<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Button_intsup1"
            android:layout_width="154dp"
            android:layout_height="27dp"
            android:text="整托"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/Button_intsup2"
            android:layout_width="154dp"
            android:layout_height="27dp"
            android:text="散托"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_intsup"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="托号："
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView_intsup_dis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="fill"
            android:gravity="center_horizontal|left|center_vertical"
            android:textSize="18sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_smzt"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:text="添加整托"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBoxZt"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:checked="false"
                android:clickable="false"
                android:text="是否整托"
                android:textSize="30sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_int_sup2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="查询已装箱"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_int_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="查询明细"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_int_sup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="提交"
            android:textSize="30sp" />


    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rev_int_sup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</LinearLayout>