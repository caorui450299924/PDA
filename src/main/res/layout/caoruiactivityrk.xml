<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_bkrk_discp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center|center_horizontal"
        android:text="请扫描二维码"
        android:background="@drawable/textview_border"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bkmhrk_wl"
            android:layout_width="70dp"
            android:layout_height="60sp"
            android:background="@drawable/textview_border"
            android:gravity="left|center_vertical"
            android:text="物料:"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/mh_wl"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:textSize="16sp" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:background="@drawable/textview_border"
        >

        <TextView
            android:id="@+id/tv_bkrk_dhwh"
            android:layout_width="70dp"
            android:layout_height="60sp"
            android:gravity="left|center_vertical"
            android:text="货位:"
            android:textSize="26sp"
            android:background="@drawable/textview_border"/>

        <TextView
            android:id="@+id/mh_dhwh"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:gravity="left|center_vertical"
            android:textSize="26sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:background="@drawable/textview_border"
        >

        <TextView
            android:id="@+id/tv_bkmhrk_hwh"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:gravity="left|center_vertical"
            android:text="货位号:"
            android:textSize="26sp"
            android:background="@drawable/textview_border"/>

        <Spinner
            android:id="@+id/spinner_hwh"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:background="@drawable/textview_border"
        >

        <TextView
            android:id="@+id/tv_bkmhrk_sl"
            android:layout_width="70dp"
            android:layout_height="60sp"
            android:gravity="left|center_vertical"
            android:text="数量:"
            android:textSize="26sp"
            android:background="@drawable/textview_border"/>

        <EditText
            android:id="@+id/mh_sl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"/>
    </RadioGroup>




    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60sp" >

        <Button
            android:id="@+id/btn_bkrk_rk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="入库" />
    </RadioGroup>

</LinearLayout>