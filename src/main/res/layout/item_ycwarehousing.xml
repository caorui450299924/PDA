<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160sp">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/textview_border_product"
        >

        <ImageView
            android:id="@+id/imv_yc_operation"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/box" />

        <RadioGroup
            android:layout_width="251sp"
            android:layout_height="140sp">

            <TextView
                android:id="@+id/tv_yc_operation_cp"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_gravity="top"
                android:background="@drawable/textview_border_product"
                android:gravity="center"
                android:textSize="16sp"
                tools:text="tv_yc_operation_cp" />

            <TextView
                android:id="@+id/tv_yc_operation_jjc"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_gravity="top"
                android:background="@drawable/textview_border_product"
                android:gravity="center"
                android:textSize="16sp"
                tools:text="tv_yc_operation_jjc" />

            <TextView
                android:id="@+id/tv_yc_operation_hwh"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_gravity="top"
                android:background="@drawable/textview_border_product"
                android:gravity="center"
                android:textSize="16sp"
                tools:text="tv_yc_operation_hwh" />

        </RadioGroup>

        <ImageView
            android:id="@+id/imageView_int_delete"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_gravity="center|right"
            android:src="@drawable/rk" />

    </RadioGroup>
</LinearLayout>